{% extends 'base.html.twig' %}

{% block title %}Game board{% endblock %}

{% block main %}
<h1>Liste des jeux du site</h1>
<a href="{{ path('app_admin') }}">Retour à l'admin</a>

<table class="table table-striped mt-3">

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom du jeu</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for game in games %}

        <tr>
            <td scope="row">{{ game.id }}</td>
            <td scope="row">{{ game.label }}
            </td>
            <td><a href="{{ path('admin_game_item',{ id: game.id } )}}" class="btn btn-outline-success me-2"><i
                        class="bi bi-eye-fill"></i></a><a href="{{ path('admin_edit_game', { id: game.id })}}"
                    class="btn btn-outline-primary me-2"><i class="bi bi-pencil-square"></i></a><a
                    href="{{ path('admin_remove_game', {id: game.id})}}" class="btn btn-outline-danger"><i
                        class="bi bi-trash3"></i></a></td>
        </tr>


        {% endfor %}

    </tbody>
    <a href="{{path('admin_add_game')}}">Créer un jeu</a>
</table>




{% endblock %}