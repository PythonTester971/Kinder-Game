{% extends 'base_admin.html.twig' %}

{% block title %}Hello AdminCategoryController!{% endblock %}

{% block div %}
<h1 class="mb-3">Liste des Catégories</h1>

<div class="d-flex justify-content-evenly">
    <a class="btn btn-outline-info" href="{{ path('app_admin') }}">Retour à l'admin</a>
    <a class="btn btn-outline-info" href="{{ path('admin_category_add')}}">Ajouter une catégorie</a>
</div>

<table class="table table-hover mt-3 w-100">

    <thead>
        <tr class="text-center">
            {# <th scope="col">#</th> #}
            <th scope="col">Nom de la catégorie</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}

        <tr>
            {# <td scope="row">{{ category.id }}</td> #}
            <td scope="row">{{ category.label }}</td>
            <td class="text-center"><a href="{{path('admin_category_item',{id : category.id})}}"
                    class="btn btn-outline-success me-2"><i class="bi bi-eye-fill"></i></a><a
                    href="{{ path('admin_category_edit', {id : category.id})}}" class="btn btn-outline-primary me-1"><i
                        class="bi bi-pencil-square"></i></a>
                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop{{category.id}}">
                    <i class="bi bi-trash3"></i>
                </button>
            </td>
            {# <a href="{{ path('admin_category_rm',{id : category.id})}}" class="btn btn-outline-danger"><i
                    class="bi bi-trash3"></i></a> #}
            <!-- Button trigger modal -->


            <!-- Modal -->
            <div class="modal fade" id="staticBackdrop{{category.id}}" data-bs-backdrop="static"
                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Suppression de catégorie</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Êtes-vous sûr de vouloir supprimer cette catégorie ?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <a href="{{ path('admin_category_rm',{id : category.id})}}"
                                class="btn btn-primary">Supprimer</a>

                        </div>
                    </div>
                </div>
            </div>
        </tr>

        {% endfor %}
    </tbody>

</table>


{% endblock %}