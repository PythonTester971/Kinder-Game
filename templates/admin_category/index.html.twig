{% extends 'base.html.twig' %}

{% block title %}Hello AdminCategoryController!{% endblock %}

{% block main %}
<h1>Liste des Catégories</h1>
<a href="{{ path('app_admin') }}">Retour à l'admin</a>
<a href="{{ path('admin_category_add')}}">Ajouter</a>

<table class="table table-striped mt-3">

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom de la catégorie</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}

        <tr>
            <td scope="row">{{ category.id }}</td>
            <td scope="row">{{ category.label }}</a>
            </td>
            <td><a href="{{path('admin_category_item',{id : category.id})}}" class="btn btn-outline-success me-2"><i
                        class="bi bi-eye-fill"></i></a><a href="{{ path('admin_category_edit', {id : category.id})}}"
                    class="btn btn-outline-primary me-2"><i class="bi bi-pencil-square"></i></a><a
                    href="{{ path('admin_category_rm',{id : category.id})}}" class="btn btn-outline-danger"><i
                        class="bi bi-trash3"></i></a></td>
        </tr>


        {% endfor %}
    </tbody>

</table>


{% endblock %}